---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";

---

<Layout>
	<div id="not-found-page">
		<main>
			<h1>404 - Page Not Found</h1>
			<p>The page you are looking for does not exist.</p>
			<div id="links">
				<a href="/" class="button"> Go to Home </a>
			</div>
		</main>
	</div>
	<div class="site-footer">
		<Footer />
	</div>
</Layout>
<style>

/* Page centering */
:global(html, body) {
	height: 100%;
	margin: 0;
	background: #000000;
	color: #e6eef8;
	font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}
:global(body) {
	display: flex;
	flex-direction: column;
	min-height: 100vh;
}
#not-found-page {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	padding: 2rem;
}
#not-found-page main {
	text-align: center;
	max-width: 720px;
	width: 100%;
}

/* Header */
h1 { font-size: clamp(1.5rem, 4vw, 2.5rem); margin: 0 0 .5rem; color: #fff; }

/* Paragraph */
p { color: #c7d2e0; margin: 0 0 1.25rem; }

/* Go to Home Button */
#links .button {
	display: inline-block;
	padding: 0.75rem 1.5rem;
	background-color: #4a90e2;
	color: #fff;
	text-decoration: none;
	font-weight: bold;
	border: none;
	border-radius: 4px;
	transition: background-color 0.3s ease;
}
#links .button:hover { background-color: #357abd; }


/* Footer */
/* Centered footer at the bottom */
.site-footer {
	margin-top: auto;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	width: 100%;
	padding: 0.5rem 0;
	box-sizing: border-box;
	text-align: center;
}
.site-footer p {
	margin: 0.25rem 0;
	line-height: 1.25;
}
</style>